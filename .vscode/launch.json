  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Run Sample (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\x64\\Debug\\Slang.exe",
      "args": ["run", "${workspaceFolder}\\sample.sl"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "integratedTerminal",
      "preLaunchTask": "msbuild-build-vcxproj-debug",
    },
    {
      "name": "Debug: Run REPL (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\x64\\Debug\\Slang.exe",
      "args": ["repl"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "integratedTerminal",
      "preLaunchTask": "msbuild-build-vcxproj-debug",
    },
    {
      "name": "Release: Run Sample (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\x64\\Release\\Slang.exe",
      "args": ["run", "${workspaceFolder}\\sample.sl"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "integratedTerminal",
      "preLaunchTask": "msbuild-build-vcxproj-release",
    },
  ]
}